{
    "name": "bref0/composer",
    "homepage": "https://bref0.github.io/composer",
    
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.org"
        }
    ],
    
    "require": {
         "hyperf/framework": "~3.1.0"
    },
    "require-all": false,
    "require-dependencies": false,
    "require-dev-dependencies": false,
    "providers": true,
    "output-dir": "./public",
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "archive": {
        "directory": "dist",
        "format": "zip"
    }
}